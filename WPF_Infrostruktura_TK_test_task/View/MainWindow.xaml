<Window x:Class="WPF_Infrostruktura_TK_test_task.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Infrostruktura_TK_test_task"
        mc:Ignorable="d"
        Title="Choose necesssary variables ☟"  Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="MaxLines" Value="1"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="MaxWidth" Value="200"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" MaxHeight="300"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
           
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Height="auto">
                    <Label Content="Group"/>
                    <TextBox/>

                    <Label Content="Name" Margin="30,0,0,0" />
                    <TextBox/>
                </StackPanel>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                

                <Grid Grid.Row="0" Grid.Column="0">
                    <Label Content="Description" />
                </Grid>

                <Grid Grid.Column="1"  Margin="0,0,3,0">
                    <RichTextBox MaxHeight="200"  />
                </Grid>

            </Grid>

        </Grid>

        <Grid Grid.Row="1">
            <DataGrid Background="#FFE8D28F"/>
        </Grid>
        
        <Grid Grid.Row="2">
            <Button Content="SEND VARIABLES to DB!!!" FontWeight="Black" MaxWidth="200" Background="AliceBlue"/>
        </Grid>
    </Grid>
</Window>
